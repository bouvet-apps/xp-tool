{
    "extends": [
        "airbnb"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-cond-assign": [
            "error",
            "except-parens"
        ],
        "no-use-before-define": [
            "error",
            "nofunc"
        ],
        "max-len": "off",
        "no-restricted-syntax": "off",
        "no-console": "off",
        "global-require": "off",
        "import/no-unresolved": "off",
        "import/no-absolute-path": "off",
        "no-underscore-dangle": "off",
        "object-shorthand": "off",
        "prefer-destructuring": "off",
        "radix": [
            "error",
            "as-needed"
        ],
        "no-plusplus": "off"
    },
    "globals": {
        "require": true,
        "log": true,
        "exports": true,
        "app": true,
        "fetch": true,
        "document": true,
        "window": true,
        "__": true
    }
}
